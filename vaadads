    <h1>Will you be my Valentine? ‚ù§Ô∏è</h1>

    <div class="buttons">
        <button class="yes-btn" onclick="showCuteMessage()">Yes üíñ</button>
        <button class="no-btn" onclick="moveNoButton()">No üíî</button>
    </div>

    <div class="cute-message hidden" id="cuteMessage">
        <h2>Yay! üéâüíò</h2>
        <p>You're the sweetest! ü•∞</p>
        <img src="https://media.giphy.com/media/l0HlNaQ6gWfllcjDO/giphy.gif" alt="Cute Valentine" width="150">
    </div>

    <p style="margin-top: 20px; color: #555;">Made by Sonny Nguyen üíå</p>

    <script>
        let yesBtn = document.querySelector('.yes-btn');
        let noBtn = document.querySelector('.no-btn');
        let cuteMessage = document.getElementById('cuteMessage');
        let yesSize = 1;

        function moveNoButton() {
            let x = Math.random() * 200 - 100;
            let y = Math.random() * 200 - 100;
            noBtn.style.transform = `translate(${x}px, ${y}px)`;
            yesSize += 0.3;
            yesBtn.style.transform = `scale(${yesSize})`;
        }

        function showCuteMessage() {
            document.querySelector('.buttons').classList.add('hidden');
            cuteMessage.classList.remove('hidden');
        }
    </script>

